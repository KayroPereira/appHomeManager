<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroungazul"
    tools:context="com.example.apphomemanager.WaterTankSetupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="248dp">

                <TextView
                    android:id="@+id/tvBoxReservoirWT"
                    android:layout_width="148dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="261dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/endereco"
                    android:textColor="?android:attr/colorButtonNormal"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/tvBoxStatusWT"
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tvBoxReservoirWT"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/caixa"
                    android:textColor="?android:attr/colorButtonNormal"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/tvLevelHWT"
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tvBoxStatusWT"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/caixa"
                    android:textColor="?android:attr/colorButtonNormal"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/tvLevelWT"
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tvLevelHWT"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/caixa"
                    android:textColor="?android:attr/colorButtonNormal"
                    android:textSize="26dp" />

                <EditText
                    android:id="@+id/etBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvBoxReservoirWT"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:layout_toEndOf="@+id/tvBoxStatusWT"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/etBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etBox1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="40dp"
                    android:layout_toEndOf="@+id/tvBoxStatusWT"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/etBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etBox2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="40dp"
                    android:layout_toEndOf="@+id/tvBoxStatusWT"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="356dp">

                <TextView
                    android:id="@+id/tvBoxLevels"
                    android:layout_width="148dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="255dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/nivel"
                    android:textColor="?android:attr/colorButtonNormal"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/tvLevelLWT"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tvBoxLevels"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/sup"
                    android:textColor="?android:attr/colorButtonNormal"
                    android:textSize="26dp" />

                <EditText
                    android:id="@+id/etBoxLH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvBoxLevels"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:layout_toEndOf="@+id/tvBoxStatusWT"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:numeric="integer" />

                <TextView
                    android:id="@+id/tvBoxLL"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tvLevelLWT"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/inf"
                    android:textColor="?android:attr/colorButtonNormal"
                    android:textSize="26dp" />

                <EditText
                    android:id="@+id/etBoxLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etBoxLH"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="40dp"
                    android:layout_toEndOf="@+id/tvBoxStatusWT"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:numeric="integer" />

                <Button
                    android:id="@+id/btBoxSetupWT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="15dp"
                    android:onClick="buttonClicked"
                    android:text="@string/enviar" />

                <Button
                    android:id="@+id/btBoxBackWT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/btBoxSetupWT"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="253dp"
                    android:layout_marginBottom="14dp"
                    android:onClick="buttonClicked"
                    android:text="@string/voltar" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
